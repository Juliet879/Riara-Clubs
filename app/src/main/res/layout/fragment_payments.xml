<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentsFragment"
    android:background="@color/bg_payments"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:text="Please select a payment method"
        android:textColor="@color/black"
        android:fontFamily="@font/life_savers_bold"
        android:textSize="22sp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/Mpesa_cardView"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"
        app:cardBackgroundColor="#5880A5"
        app:cardCornerRadius="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/life_savers_bold"
                android:text="@string/m_pesa"
                android:textColor="#000"
                android:textSize="22sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>